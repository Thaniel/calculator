<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="historicalBorderPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="background-dark" stylesheets="@../../../calculator-stylesheet.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.thaniel.calculator.controllers.HistoricalController">
    <center>
        <ScrollPane fx:id="historicalScrollPane" fitToHeight="true" fitToWidth="true" styleClass="background-dark" stylesheets="@../../../calculator-stylesheet.css" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="historicalContainer" style="-fx-alignment: BASELINE_RIGHT;" styleClass="background-dark" stylesheets="@../../../calculator-stylesheet.css">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <Button fx:id="clearButton" mnemonicParsing="false" onMouseClicked="#onClickClearHistorical" styleClass="background-dark" stylesheets="@../../../calculator-stylesheet.css" text="Clear" textFill="WHITE" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </BorderPane.margin>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </bottom>
    <top>
        <Label fx:id="titleLabel" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="50.0" prefWidth="100.0" text="Historical" textFill="WHITE" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="20.0" />
            </padding>
            <font>
                <Font size="18.0" />
            </font>
        </Label>
    </top>
</BorderPane>
